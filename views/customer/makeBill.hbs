<form method="POST" action="/payment/addBill" id="BillForm" novalidate>
  <div class="form-group row">
    <label for="exampleFormControlInput1" class="col-sm-2 col-form-label">Khách hàng</label>
    <div class="col-sm-10">
      <input type="text" readonly class="form-control-plaintext" name="hoTen" value="{{bookingNote.HoTen}}">
    </div>
  </div>
    <div class="form-group row">
    <label for="exampleFormControlInput1" class="col-sm-2 col-form-label">Địa chỉ</label>
    <div class="col-sm-10">
      <input type="text" readonly class="form-control-plaintext" name="diaChi" value="{{bookingNote.DiaChi}}">
    </div>
  </div>
  <div class="form-group row">
    <label for="exampleFormControlInput1" class="col-sm-2 col-form-label">Ngày thanh toán</label>
    <div class="col-sm-10">
      <input type="date" name="ngayThanhToan">
    </div>
  </div>
  <div class="form-group row">
    <label for="exampleFormControlInput1" class="col-sm-2 col-form-label">Số phòng</label>
    <div class="col-sm-10">
      <input type="text" readonly class="form-control-plaintext" name="phong" value={{bookingNote.Phong}}>
    </div>
  </div>
  <div class="form-group row">
    <label for="exampleFormControlInput1" class="col-sm-2 col-form-label">Số ngày thuê</label>
    <div class="col-sm-10">
      <input type="text" readonly class="form-control-plaintext" name="NgayThue">
    </div>
  </div>
    <div class="form-group row">
    <label for="exampleFormControlInput1" class="col-sm-2 col-form-label">Đơn giá</label>
    <div class="col-sm-10">
      <input type="text" readonly class="form-control-plaintext" name="donGia">
    </div>
  </div>
  <div class="form-group row">
    <label for="exampleFormControlInput1" class="col-sm-2 col-form-label">Thành tiền</label>
    <div class="col-sm-10">
      <input type="text" readonly class="form-control-plaintext" name="thanhTien">
    </div>
  </div>
  <button type="submit" class="btn btn-primary w-md waves-effect waves-light" id="submitButton">Thanh toán</button>
</form>
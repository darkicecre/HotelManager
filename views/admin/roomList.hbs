{{#if Notifi}}
<div class="alert alert-success " role="alert">
  <strong>success!</strong> {{Notifi}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/if}}
<a href="admin/addNewRoom?username={{UserName}}" type="button"
  class="btn btn-primary w-md waves-effect waves-light">Thêm Phòng Mới</a>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Phòng</th>
      <th scope="col">Loại phòng</th>
      <th scope="col">Đơn giá</th>
      <th scope="col">Ghi chú</th>
    </tr>
  </thead>
  <tbody>
    {{#each data}}
    <tr>
      <td>{{this.Phong}}</td>
      <td>{{this.LoaiPhong}}</td>
      <td>{{this.DonGia}}</td>
      <td>{{this.GhiChu}}</td>
      <td>
        <a href="admin/EditRoomForm/{{this.Phong}}?username={{../UserName}}" type="button"
          onclick="return confirm('Bạn có chắc chắn muốn sửa thông tin phòng {{this.Phong}}?');"
          class="btn btn-primary w-md waves-effect waves-light">Chỉnh sửa</a>
        <a href="admin/DeleteRoom/{{this.Phong}}?username={{../UserName}}" type="button"
          onclick="return confirm('Bạn có chắc chắn muốn xóa?');"
          class="btn btn-primary w-md waves-effect waves-light">Xóa</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
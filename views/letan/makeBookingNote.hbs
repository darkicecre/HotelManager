{{#if alertSuccess}}
<div class="alert alert-success " role="alert">
  <strong>success!</strong> {{alertSuccess}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/if}}

{{#if alertFail}}
<div class="alert alert-warning " role="alert">
  <strong>Fail!</strong> {{alertFail}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/if}}

<form method="POST" action="/booking/addBookingNote" id="BookingForm" novalidate>
  <div class="form-group row">
    <label for="exampleFormControlInput1" class="col-sm-2 col-form-label">Tài khoản lập phiếu</label>
    <div class="col-sm-10">
      <input type="text" readonly class="form-control" name="username" value={{UserName}}>
    </div>
  </div>
  <div class="form-group row">
    <label for="exampleFormControlInput1" class="col-sm-2 col-form-label">Số phòng</label>
    <div class="col-sm-10">
      <input type="text" readonly class="form-control-plaintext" name="phong" value={{phong}}>
    </div>
  </div>
  <div class="form-group row">
    <label for="exampleFormControlInput1" class="col-sm-2 col-form-label">Ngày bắt đầu thuê</label>
    <div class="col-sm-10">
      <input type="date" name="ngayThue">
    </div>
  </div>
  <div class="form-group row">
    <label for="exampleFormControlInput1" class="col-sm-2 col-form-label">Tên khách hàng</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="hoTen">
    </div>
  </div>
  <div class="form-group row">
    <label for="exampleFormControlInput1" class="col-sm-2 col-form-label">Loại khách</label>
    <div class="col-sm-10">
      <select class="form-control" id="exampleFormControlSelect1" name="loai">
      <option>Nội địa</option>
      <option>Nước ngoài</option>
    </select>
    </div>
  </div>
    <div class="form-group row">
    <label for="exampleFormControlInput1" class="col-sm-2 col-form-label">CMND</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="cMND">
    </div>
  </div>
    <div class="form-group row">
    <label for="exampleFormControlInput1" class="col-sm-2 col-form-label">Địa chỉ</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="diaChi">
    </div>
  </div>
  <div class="form-group row">
    <label for="exampleFormControlInput1" class="col-sm-2 col-form-label">Số khách</label>
    <div class="col-sm-10">
      <select class="form-control" id="exampleFormControlSelect1" name="soKhach">
      <option>1</option>
      <option>2</option>
      <option>3</option>
    </select>
    </div>
  </div>
  <button type="submit" class="btn btn-primary w-md waves-effect waves-light" id="submitButton">Thuê phòng</button>
</form>